UNAME = $(shell uname)

AR_HOME = ../../..
AR_CPPFLAGS = -I$(AR_HOME)/include

LIBS= -lARgsub_lite -lARvideo -lAR -lARICP -lAR2 -lstdc++ -lKPM -lc++ -lARUtil -lARMulti -lEden -lAR @LIBS@

CC=@CC@
CXX=@CXX@
CPPFLAGS = $(AR_CPPFLAGS)
CFLAGS = @CFLAG@
CXXFLAGS = @CFLAG@
AR=@AR@
ARFLAGS=@ARFLAGS@
RANLIB = @RANLIB@

TARGET = $(AR_HOME)/lib/ARWrapper.so

HEADERS = \
trackingSub.h \


OBJS = \
AndroidFeatures.o \
AndroidVideoSource.o \
ARController.o \
ARMarker.o \
ARMarkerMulti.o \
ARMarkerNFT.o \
ARMarkerSquare.o \
ARPattern.o \
ARToolKitVideoSource.o \
ARToolKitWrapperExportedAPI.o \
ColorConversion.o \
trackingSub.o \
VideoSource.o \

# Implicit rule, to compile C++ files with the .cpp suffix (rule already exists for .cc).
%.o : %.cpp
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $< -o $@

default build all: $(TARGET)

$(OBJS_OBJC): $(HEADERS)
	$(CC) $(CFLAGS) $(CPPFLAGS)  -c -ObjC -o $@ $*.c

$(OBJS): $(HEADERS)

$(TARGET): $(OBJS) $(OBJS_OBJC)
	$(CC) $(CFLAGS) $(CPPFLAGS) $(LDFLAG) -shared -o $@ $(OBJS) -L$(AR_HOME)/lib/@SYSTEM@ -L$(AR_HOME)/lib/ $(LIBS)
	$(RANLIB) $@

#-L/home/user/artoolkit5/lib/ -lAR -lAR2

clean:
	-rm -f *.o *~ *.bak
	-rm $(TARGET)

allclean:
	-rm -f *.o *~ *.bak
	-rm $(TARGET)
	-rm -f Makefile

distclean:
	rm -f *.o
	rm -f Makefile
